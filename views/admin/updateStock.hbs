<section>
    <div class="container ">
        <div class="row ">
            <div class="col-md-8 mt-5 ">
                <div class="card">
                    <div class="card-header">
                      <h3>Edit Stock  <a href="/admin/viewstock/" class="btn btn-success" style="float:right;">List</a></h3>  
                    </div>
                    <div class="card-body">

                        {{#if message}}
                        <h2>{{message}}</h2>
                        {{/if}}
                        <form action="/admin/updateStock/{{stock._id}}" method="POST" role="form" enctype="multipart/form-data">

                         <select class="form-control" id="product_id"  name="product_id" required>
                          <option value="" >Select Product</option>
                           {{#each products}}

                        <option value="{{product_id}}"  > {{name}}</option>
                        {{/each}}
                        </select>
                        <br>
                         <select class="form-control" id="warehouse_number"  name="warehouse_number" required>
                          <option value="" >Select Warehouse Number</option>
                           {{#each warehouse}}

                        <option value="{{warehouse_number}}"  >{{warehouse_number}}</option>
                        {{/each}}
                        </select>
                      
                            <div class="form-group p-2">
                                <label for="price">Quantity</label>
                                <input type="text" value="{{stock.quantity}}" class="form-control " name="quantity" id="quantity" placeholder="Quantity" required/>
                            </div>

                                 

                            <button type="submit" class="btn btn-primary mt-5">Update</button>
                            <br><br><br>
                            
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>