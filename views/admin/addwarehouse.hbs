<section>
    <div class="container ">
        <div class="row ">
            <div class="col-md-8 mt-5 ">
                <div class="card">
                    <div class="card-header">
                      <h3>Add Warehouse <a href="/admin/viewwarehouse/" class="btn btn-success" style="float:right;">List</a></h3>  
                    </div>
                    <div class="card-body">

                        {{#if message}}
                        <div class="alert alert-success" role="alert">
                        {{message}}
                        </div>
                        {{/if}}
                         {{#if errMessage}}
                        <div class="alert alert-danger" role="alert">
                        {{errMessage}}
                        </div>
                        {{/if}}
                        
                        <form action="/admin/addwarehouse" method="POST" role="form" enctype="multipart/form-data">
                        <div class="form-group p-2">
                                <label for="whnor">Warehouse Number</label>
                                <input type="text" class="form-control " name="warehouse_number" id="warehouse_number" placeholder=" Warehouse Number" required />
                            </div>

                            <div class="form-group p-2">
                                <label for="name">Stock Limit</label>
                                <input type="text" class="form-control " name="stock_limit" id="stock_limit" placeholder=" Stock Limit" />
                            </div>

                          
                            
                          

                            <button type="submit" class="btn btn-primary mt-5">Add Warehouse</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>