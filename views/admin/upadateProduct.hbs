<section>
    <div class="container ">
        <div class="row ">
            <div class="col-md-8 mt-5 ">
                <div class="card">
                    <div class="card-header">
                      <h3>Edit Product <a href="/admin/listproduct/" class="btn btn-success" style="float:right;">List</a></h3>  
                    </div>
                    <div class="card-body">

                        {{#if message}}
                        <h2>{{message}}</h2>
                        {{/if}}
                        <form action="/admin/upadateProduct/{{products._id}}" method="POST" role="form" enctype="multipart/form-data">

                            <div class="form-group p-2">
                                <label for="name">Product Id</label>
                                <input type="text" value="{{products.product_id}}" class="form-control" name="product_id" id="product_id" placeholder=" Product Id" required/>
                            </div>

                            <div class="form-group p-2">
                                <label for="price">Name</label>
                                <input type="text" value={{products.name}} class="form-control " name="name" id="name" placeholder="Name" required/>
                            </div>

                                 

                            <button type="submit" class="btn btn-primary mt-5">Update</button>
                            <br><br><br>
                            
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>